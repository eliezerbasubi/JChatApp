<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/request_image_profile"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:src="@drawable/default_avatar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/request_notifications"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/request_notifications"
        android:text="Eliezer"
        android:textStyle="bold"
        android:textSize="18dp"
        android:id="@+id/request_username" />

    <TextView
        android:id="@+id/request_notifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/request_username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Eliezer has sent u a friend request" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/colorBlack"
        android:layout_alignLeft="@+id/request_notifications"
        android:layout_alignStart="@+id/request_notifications"
        android:layout_below="@+id/request_notifications"
        android:layout_marginTop="14dp" />
</RelativeLayout>