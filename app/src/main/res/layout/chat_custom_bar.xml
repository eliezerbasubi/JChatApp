<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/custom_bar_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/default_avatar"/>

    <TextView
        android:id="@+id/custom_chat_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/custom_bar_image"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_toEndOf="@+id/custom_bar_image"
        android:layout_toRightOf="@+id/custom_bar_image"
        android:text="Display Name"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/last_seen_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/custom_bar_image"
        android:layout_alignLeft="@+id/custom_chat_username"
        android:layout_alignStart="@+id/custom_chat_username"
        android:textColor="@android:color/holo_green_dark"
        android:text="Last Seen" />
</RelativeLayout>